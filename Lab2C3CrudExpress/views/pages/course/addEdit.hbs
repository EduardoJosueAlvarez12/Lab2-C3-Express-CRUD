{{> header }}
<br />
<br />
<div class="container"
    style="width: 40%; box-sizing:border-box; -moz-box-sizing: border-box; -webkit-box-sizing: border-box; border: 2px solid rgb(202, 237, 255); border-radius: 5px; padding:20px; background-color:rgb(202, 237, 255);">
    <h2 style="text-align: center;">{{ viewTitle }}</h2>

    <form action="/course" method="POST">
        <input type="hidden" name="_id" value="{{course._id}}" required>
        <div class="form-group">
            <label for="courseId">Course ID</label>
            <input type="text" class="form-control" name="courseId" id="courseId" placeholder="Enter Course ID"
                value="{{course.courseId}}" required>
        </div>
        <div class="form-group">
            <label for="courseName">Course Name</label>
            <input type="text" class="form-control" name="courseName" id="courseName" placeholder="Enter Course Name"
                value="{{course.courseName}}" required>
        </div>
        <div class="form-group">
            <label for="size">Size</label>
            <input type="text" class="form-control" name="size" id="size" placeholder="Enter Size"
                value="{{course.size}}" required>
        </div>

        <div class="form-group">
            <label for="teacherId">Teacher ID</label>
            <input type="text" class="form-control" name="teacherId" id="teacherId" placeholder="Enter Teacher ID"
                value="{{course.teacherId}}" required>
        </div>

        <div class="form-group">
            <label for="textbook">Textbook</label>
            <input type="text" class="form-control" name="textbook" id="textbook" placeholder="Enter Textbook"
                value="{{course.textbook}}" required>
        </div>


        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>